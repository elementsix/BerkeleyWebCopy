(define (blackcard x y c)
(penup)
(goto x (+ 10 y))
(pendown)
(begin_fill)
(color c)
(setheading 225)
(forward 25)
(circle 12.5 180)
(right 165)
(forward 12.5)
(left 120)
(forward 12.5)
(left 120)
(forward 12.5)
(left 15)
(left 180)
(circle 12.5 180)
(forward 25)
(end_fill)
)


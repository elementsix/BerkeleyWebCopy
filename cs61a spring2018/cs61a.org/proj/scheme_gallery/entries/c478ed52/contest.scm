(define (background m n x y)
;m is the number of rows of hearts.
;n is the number of hearts.
;(/ n m) is the number of columns of hearts.
;Make sure n%m = 0 for evenly distributed hearts.

  (cond ((= n 0) (pu))
    ((= (modulo (- n 1) m) 0)
      (which-color m n x y)
      (background m (- n 1) (+ x 120) (+ y (* 90 (- m 1)))))
    (else
      (which-color m n x y)
      (background m (- n 1) x (- y 90)))
  )
)

(define (which-color m n x y)
  (cond ((= (modulo n 4) 0) (blackcard x y "#CBBAED"))
    ((= (modulo n 4) 3) (red_card x y "pink"))
    ((= (modulo n 4) 2) (flower x y "#CBBAED"))
    (else (diamond x y "pink"))
  )
)
